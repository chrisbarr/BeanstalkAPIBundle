<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="beanstalkapi.account">null</parameter>
        <parameter key="beanstalkapi.username">null</parameter>
        <parameter key="beanstalkapi.password">null</parameter>
        <parameter key="beanstalkapi.service.class">Beanstalkapp\BeanstalkAPIBundle\Services\BeanstalkAPI</parameter>
    </parameters>

    <services>
        <service id="beanstalkapi" class="%beanstalkapi.service.class%">
            <argument>%beanstalkapi.account%</argument>
            <argument>%beanstalkapi.username%</argument>
            <argument>%beanstalkapi.password%</argument>
        </service>
    </services>

</container>